// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
    // Further reading:
    // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
    // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
    url      = env("DATABASE_URL")
}

model StudySetCard {
    id        Int      @id @default(autoincrement())
    term     String
    definition      String
    createdAt DateTime @default(now())
    order Int @default(0)
    studySet   StudySet @relation(fields: [studySetId], references: [id])
    studySetId Int
}

model StudySet {
    id        Int      @id @default(autoincrement())
    name      String
    description String?
    createdAt DateTime @default(now())
    createdBy   User   @relation(fields: [createdById], references: [id])
    createdById String

    cards StudySetCard[]
    views StudySetView[]
    reviews StudySetReview[]
    comments StudySetComment[]

    @@index([name])
}

model StudySetView {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    studySet   StudySet @relation(fields: [studySetId], references: [id])
    studySetId Int
    user       User     @relation(fields: [userId], references: [id])
    userId     String

    @@unique([userId, studySetId])
}

model StudySetReview {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())
    studySet   StudySet @relation(fields: [studySetId], references: [id])
    studySetId Int
    user       User     @relation(fields: [userId], references: [id])
    userId     String

    rating Int

    @@unique([userId, studySetId])
}

model StudySetComment {
    id        Int      @id @default(autoincrement())
    createdAt DateTime @default(now())

    studySet   StudySet @relation(fields: [studySetId], references: [id])
    studySetId Int

    user       User     @relation(fields: [userId], references: [id])
    userId     String

    content String
    deleted Boolean @default(false)
    deletedAt DateTime?
}

// Necessary for Next auth
model Account {
    id                String  @id @default(cuid())
    userId            String
    type              String
    provider          String
    providerAccountId String
    refresh_token     String? // @db.Text
    access_token      String? // @db.Text
    expires_at        Int?
    token_type        String?
    scope             String?
    id_token          String? // @db.Text
    session_state     String?
    user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

    @@unique([provider, providerAccountId])
}

model Session {
    id           String   @id @default(cuid())
    sessionToken String   @unique
    userId       String
    expires      DateTime
    user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
    id            String    @id @default(cuid())
    name          String?
    email         String?   @unique
    emailVerified DateTime?
    image         String?

    accounts      Account[]
    sessions      Session[]

    studySets     StudySet[]
    studySetViews StudySetView[]
    studySetReviews StudySetReview[]
    studySetComments StudySetComment[]
}

model VerificationToken {
    identifier String
    token      String   @unique
    expires    DateTime

    @@unique([identifier, token])
}
